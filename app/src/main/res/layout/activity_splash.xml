<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashActivity"
    android:background="@color/neumorphism_light"
    android:gravity="center">

    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/design_concept"
        android:text="NecroManiac"
        android:layout_margin="24dp"/>

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_emf_name"
        android:layout_below="@id/splash_app_name"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnetic Field Sensor"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/splash_emf_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/done_24"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:layout_marginLeft="24dp"
        android:id="@+id/splash_emf_progress"
        android:layout_below="@id/splash_emf_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        app:mpb_progressBackgroundTint="@color/neumorphism_light"
        app:mpb_progressTint="@color/design_concept"
        android:layout_marginBottom="8dp"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_acc_name"
        android:layout_below="@id/splash_emf_progress"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Sensor"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/splash_acc_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/done_24"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:layout_marginLeft="24dp"
        android:id="@+id/splash_acc_progress"
        android:layout_below="@id/splash_acc_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        app:mpb_progressBackgroundTint="@color/neumorphism_light"
        app:mpb_progressTint="@color/design_concept"
        android:layout_marginBottom="8dp"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_gravity_name"
        android:layout_below="@id/splash_acc_progress"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravity Sensor"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/splash_gravity_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/done_24"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/splash_gravity_progress"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/splash_gravity_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        app:mpb_progressBackgroundTint="@color/neumorphism_light"
        app:mpb_progressTint="@color/design_concept"
        android:layout_marginBottom="8dp"
        app:mpb_progressStyle="horizontal"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />


</RelativeLayout>