<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMFActivity"
    android:gravity="center"
    android:background="@color/neumorphism_light">

    <com.github.sshadkany.shapes.RoundRectView
        app:shape_roundRect_shadow_type="drop_shadow"
        android:id="@+id/emf_text_container"
        android:layout_width="@dimen/emf_bar_container_width"
        android:layout_alignParentTop="true"
        android:layout_height="100dp"
        app:shape_roundRect_shadow_position_x="3dp"
        app:shape_roundRect_shadow_position_y="3dp"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_borderColor="@color/design_concept"
        app:shape_roundRect_backgroundColor="@color/neumorphism_light"
        app:shape_roundRect_dark_color="@color/neu_light"
        app:shape_roundRect_light_color="@color/neu_dark"
        app:shape_roundRect_topRightRadius="16dp"
        app:shape_roundRect_bottomRightRadius="16dp"
        app:shape_roundRect_topLeftRadius="16dp"
        app:shape_roundRect_bottomLeftRadius="16dp">

        <TextView
            android:layout_margin="24dp"
            android:id="@+id/emf_tv_value"
            android:text="24ut"
            android:fontFamily="@font/digital"
            android:textColor="@color/emf_green"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.github.sshadkany.shapes.RoundRectView>


    <com.github.sshadkany.shapes.RoundRectView
        android:layout_below="@id/emf_text_container"
        android:id="@+id/emf_bars_container"
        android:layout_height="@dimen/emf_bar_container_height"
        android:layout_width="@dimen/emf_bar_container_width"
        app:shape_roundRect_shadow_type="drop_shadow"
        app:shape_roundRect_backgroundColor="@color/neumorphism_light"
        app:shape_roundRect_dark_color="@color/neu_light"
        app:shape_roundRect_light_color="@color/neu_dark"
        app:shape_roundRect_shadow_position_x="3dp"
        app:shape_roundRect_shadow_position_y="3dp"
        app:shape_roundRect_topRightRadius="32dp"
        app:shape_roundRect_bottomRightRadius="32dp"
        app:shape_roundRect_topLeftRadius="32dp"
        app:shape_roundRect_bottomLeftRadius="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8"
            android:padding="30dp"
            android:orientation="vertical">
            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_red"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_red_light"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>


            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">

                <View
                    android:id="@+id/emf_orange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_orange"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_orange_light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_orange_light"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_yellow"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_yellow_light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_yellow_light"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_green_light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_green_light"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>

            <com.github.sshadkany.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:shape_roundRect_shadow_type="big_inner_shadow"
                app:shape_roundRect_backgroundColor="@color/neumorphism_light"
                app:shape_roundRect_dark_color="@color/neu_light"
                app:shape_roundRect_light_color="@color/neu_dark"
                app:shape_roundRect_topRightRadius="16dp"
                app:shape_roundRect_bottomRightRadius="16dp"
                app:shape_roundRect_topLeftRadius="16dp"
                app:shape_roundRect_bottomLeftRadius="16dp">
                <View
                    android:id="@+id/emf_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/emf_green"
                    android:visibility="invisible"
                    />
            </com.github.sshadkany.shapes.RoundRectView>



        </LinearLayout>
    </com.github.sshadkany.shapes.RoundRectView>

</RelativeLayout>